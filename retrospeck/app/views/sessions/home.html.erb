<h4> <%=@current_user.user_name%>'s Profile </h4>

  <div class="row">

    <div class="col s6">
      <span class="card-title">Your Reviews</span>

      <ul class="collapsible" data-collapsible="accordion">
        <% if @reviews.empty? %>
          <%= flash[:notice] %>
        <% else %>
          <% @reviews.each do |review| %>
        <li>
          <div class="collapsible-header"></span><i class="material-icons">explicit</i><%= review['title'] %></div>
            <div class="collapsible-body">
              <p><%= review['content'] %></p>

              <button class="btn waves-effect waves-light" type="submit" name="delete"><%= button_to 'Delete Review', review, method: :delete %></button>
              <a href="/reviews/<%= review['id']%>/edit" class="btn waves-effect waves-light">Edit Review</a>
            </div>
        </li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class="col s6">
      <span class="card-title">Reviews you've liked!</span>

      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <div class="collapsible-header"><span class="new badge">4</span><i class="material-icons">filter_drama</i>First</div>
          <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
        </li>
      </ul>
    </div>

  </div>
