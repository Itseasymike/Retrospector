<% @page_title = "UserAuth | Login" -%>
<div>
  <h3>Log in</h3>
  <br />
  <%= form_tag(:action => 'login_attempt') do %>
    <p>Username or Email:</br> <%= text_field_tag(:username_or_email) %></p>
    <p>Password:</br> <%= password_field_tag :login_password %></p>
    <%= flash[:notice]  %>
    <button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag("Log In") %></button>
    <br><br><%= link_to "(Reset Password)", new_password_reset_path %>

    <% end %>

      <br />
      <br />

     <span style="color: red;"> <%= flash[:notice] %> </span>

     <span style="color: red;"> <%= flash[:success] %> </span>

</div>

